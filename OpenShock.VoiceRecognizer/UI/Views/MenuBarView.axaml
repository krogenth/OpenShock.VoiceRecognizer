<UserControl x:Class="OpenShock.VoiceRecognizer.UI.Views.MenuBarView"
			 xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:vm="using:OpenShock.VoiceRecognizer.UI.ViewModels"
			 xmlns:views="using:OpenShock.VoiceRecognizer.UI.Views"
			 x:DataType="vm:MenuBarViewModel">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File" />
			<MenuItem Header="Options">
				<MenuItem Header="_Settings"
						  Command="{Binding OpenSettingsWindow}" />
			</MenuItem>
		</Menu>
	</DockPanel>
</UserControl>
